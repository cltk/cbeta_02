229\u6167\uff0c\u53ca\u5177\u5927\u529b\u8005\uff0c", "167": "\u80fd\u767c\u4fe1\u89e3\u5fc3\uff0c\u901f\u5f97\u6210\u4f5b\u679c\u3002", "168": "\u5982\u662f\u5584\u901d\u6559\uff0c\u82e5\u6709\u5f97\u805e\u8005\uff0c", "169": "\u805e\u5df2\u5fa9\u70ba\u4ed6\uff0c\u5c55\u8f49\u800c\u5ba3\u6f14\u3002", "17": "\u5c45\u6cd5\u754c\uff0c\u4ea6\u52ff\u8b02\u4f5b\u8655\u5927\u773e\u4e2d\uff0c\u7576\u77e5\u8af8\u4f5b\u7121\u898b", "170": "\u5982\u70ba\u5f7c\u8af8\u4f5b\uff0c\u6700\u4e0a\u4eba\u4e2d\u5c0a\uff0c", "171": "\u5165\u5927\u7121\u9918\u4f9d\uff0c\u6e05\u6de8\u6d85\u76e4\u5df2\u3002", "172": "\u80fd\u5efa\u7acb\u5bf6\u5854\uff0c\u589e\u8073\u5fa9\u6b8a\u5999\uff0c", "173": "\u773e\u5bf6\u6240\u838a\u56b4\uff0c\u9ad8\u8e30\u6709\u9802\u969b\u3002", "174": "\u7aea\u7acb\u52dd\u5e61\u84cb\uff0c\u5bf6\u9234\u51fa\u5999\u8072\uff0c", "175": "\u4e0a\u5fb9\u6709\u9802\u5929\uff0c\u56b4\u597d\u800c\u5ee3\u5927\u3002", "176": "\u82e5\u6709\u8af8\u83e9\u85a9\uff0c\u611b\u6a02\u6b64\u7d93\u5178\uff0c", "177": "\u65bc\u5982\u662f\u76f8\u4e2d\uff0c\u805e\u5df2\u767c\u6de8\u4fe1\uff0c", "178": "\u65bc\u5f7c\u6e05\u6de8\u8655\uff0c\u5b89\u5e03\u662f\u6b63\u6cd5\uff0c", "179": "\u6b64\u6240\u7372\u798f\u860a\uff0c\u5ee3\u5927\u800c\u6700\u52dd\u3002", "18": "\u7121\u805e\u3001\u7121\u6240\u4f9b\u990a\u7121\u4f9b\u990a\u8005\uff0c\u8af8\u4f5b\u5982\u4f86\u7121\u6709\u5c11", "180": "\u82e5\u6709\u8af8\u83e9\u85a9\uff0c\u53d7\u6301\u6b64\u6b63\u6cd5\uff0c", "181": "\u5ee3\u70ba\u4ed6\u6d41\u901a\uff0c\u6ecc\u9664\u608b\u6cd5\u57a2\uff0c", "182": "\u6b64\u6240\u7372\u798f\u860a\uff0c\u529f\u5fb7\u52dd\u7121\u91cf\uff0c", "183": "\u8da3\u6c42\u5927\u83e9\u63d0\uff0c\u96a8\u9858\u800c\u7372\u5f97\u3002", "184": "\u6b64\u751a\u6df1\u7d93\u5178\uff0c\u8af8\u4f5b\u4e4b\u6240\u5ba3\uff0c", "185": "\u8af8\u5927\u83e9\u85a9\u773e\uff0c\u591a\u53d7\u6301\u5ba3\u6f14\u3002", "186": "\u5341\u65b9\u4e00\u5207\u4f5b\uff0c\u6089\u65bc\u865b\u7a7a\u754c\uff0c", "187": "\u666e\u73fe\u8af8\u4f5b\u8eab\uff0c\u4ee4\u4e00\u5207\u77bb\u4ef0\u3002\u300d", "188": "\u4f5b\u8aaa\u6b64\u7d93\u5df2\uff0c\u5999\u5409\u7965\u83e9\u85a9\u6469\u8a36\u85a9\uff0c\u5e76\u9918\u7121\u6578", "189": "\u4e0d\u601d\u8b70\u4e0d\u53ef\u8aaa\u8af8\u83e9\u85a9\u773e\uff0c\u53ca\u5927\u8072\u805e\uff0c\u4e00\u5207\u4e16", "19": "\u6cd5\u82e5\u4e00\u6027\u82e5\u591a\u6027\u800c\u53ef\u65bd\u4f5c\u3002\u4ea6\u52ff\u8b02\u4f5b\u5f97\u83e9", "190": "\u9593\u5929\u3001\u4eba\u3001\u963f\u4fee\u7f85\u3001\u4e7e\u95e5\u5a46\u7b49\uff0c\u805e\u4f5b\u6240\u8aaa\u7686\u5927\u6b61", "191": "\u559c\uff0c\u4fe1\u53d7\u5949\u884c\u3002", "192": "\u4f5b\u8aaa\u5927\u4e58\u5165\u8af8\u4f5b\u5883\u754c\u667a\u5149\u660e\u838a\u56b4\u7d93\u5377\u7b2c\u4e94", "2": "\u8b6f\u7d93\u4e09\u85cf\u671d\u6563\u5927\u592b\u8a66\u5149\u797f\u537f\u50b3\u68b5", "20": "\u63d0\u679c\uff0c\u4ea6\u52ff\u8b02\u4f5b\u6709\u6cd5\u53ef\u73fe\uff0c\u7121\u898b\u3001\u7121\u805e\u3001\u7121\u5ff5\u3001\u7121", "21": "\u77e5\uff0c\u4f5b\u4ea6\u7121\u8a00\u5df2\u8aaa\u73fe\u8aaa\u7576\u8aaa\u8af8\u6cd5\u3002\u4ea6\u975e\u8af8\u4f5b", "22": "\u73fe\u6210\u6b63\u89ba\uff0c\u4ea6\u7121\u6709\u6cd5\u80fd\u6210\u6b63\u89ba\uff0c\u4ea6\u975e\u8af8\u4f5b\u65b7", "23": "\u67d3\u8b49\u6de8\uff0c\u8a2d\u6709\u6240\u4f5c\u96e2\u898b\u805e\u89ba\u77e5\u3002\u4f55\u4ee5\u6545\uff1f\u5999", "24": "\u5409\u7965\u7576\u77e5\uff0c\u4e00\u5207\u6cd5\u672c\u4f86\u6e05\u6de8\u6545\u3002", "25": "\u300c\u5fa9\u6b21\uff0c\u5999\u5409\u7965\uff01\u6c5d\u7b49\u7576\u77e5\u6b64\u7d93\u529f\u5fb7\u4e0d\u53ef\u601d\u8b70\uff0c", "26": "\u82e5\u6709\u83e9\u85a9\u4ee5\u4e09\u5343\u5927\u5343\u4e16\u754c\u5fae\u5875\u7b49\u6578\u4e00\u5207\u773e", "27": "\u751f\uff0c\u666e\u4ee4\u5efa\u7acb\u6210\u7de3\u89ba\u679c\uff0c\u7136\u65bc\u6b64\u6b63\u6cd5\u4e0d\u751f\u4fe1", "28": "\u89e3\u3002\u82e5\u6709\u83e9\u85a9\u65bc\u6b64\u6b63\u6cd5\u751f\u4fe1\u89e3\u8005\uff0c\u5176\u6240\u7372\u798f", "29": "\u6bd4\u524d\u798f\u860a\u5ee3\u591a\u7121\u91cf\uff0c\u4f55\u6cc1\u81ea\u66f8\u6216\u6559\u4eba\u66f8\uff0c\u6240", "3": "\u5927\u5e2b\u8cdc\u7d2b\u6c99\u9580\u81e3\u60df\u6de8\u7b49\u5949\u3000\u8a54\u8b6f", "30": "\u5f97\u798f\u860a\u500d\u5fa9\u589e\u52dd\u3002", "31": "\u300c\u53c8\uff0c\u5999\u5409\u7965\uff01\u82e5\u5fa9\u6709\u4eba\u4ee5\u4e09\u5343\u5927\u5343\u4e16\u754c\u6240\u6709", "32": "\u4e00\u5207\u773e\u751f\u4e4b\u985e\u2014\u2014\u82e5\u5375\u751f\u3001\u82e5\u80ce\u751f\uff0c\u82e5\u6fd5\u751f\u3001\u82e5\u5316", "33": "\u751f\uff0c\u82e5\u6709\u8272\u82e5\u7121\u8272\uff0c\u82e5\u6709\u60f3\u82e5\u7121\u60f3\uff0c\u82e5\u975e\u6709\u60f3", "34": "\u82e5\u975e\u7121\u60f3\uff0c\u82e5\u4e8c\u8db3\u82e5\u56db\u8db3\uff0c\u82e5\u7121\u8db3\u82e5\u591a\u8db3\u2014\u2014\u5f7c", "35": "\u5982\u662f\u7b49\u8af8\u773e\u751f\u985e\uff0c\u666e\u4ee4\u5efa\u7acb\u7686\u5f97\u4eba\u8eab\uff0c\u5f97\u4eba", "36": "\u8eab\u5df2\u6089\u4ee4\u767c\u8d77\u5927\u83e9\u63d0\u5fc3\u3002\u767c\u5927\u83e9\u63d0\u5fc3\u5df2\uff0c\u4e00", "37": "\u4e00\u83e9\u85a9\u65bc\u4e0d\u53ef\u601d\u8b70\u6b91\u4f3d\u6c99\u6578\u4f5b\u524e\u571f\u4e2d\uff0c\u70ba", "38": "\u5fae\u5875\u7b49\u8af8\u4f5b\u83e9\u85a9\u5e76\u8072\u805e\u773e\uff0c\u4ee5\u98f2\u98df\u3001\u8863\u670d\u3001\u5750", "39": "\u81e5\u4e4b\u7269\uff0c\u75c5\u7de3\u91ab\u85e5\u53ca\u8af8\u6a02\u5177\uff0c\u4f9b\u7d66\u4f9b\u990a\u7d93\u6b91", "4": "\u300c\u7a3d\u9996\u5341\u529b\u5ea6\u7169\u60f1\uff0c\u7a3d\u9996\u5ee3\u5927\u65bd\u7121\u754f\uff0c", "40": "\u4f3d\u6c99\u52ab\uff0c\u5f7c\u5f7c\u8af8\u4f5b\u5165\u6d85\u76e4\u5f8c\uff0c\u9020\u4e03\u5bf6\u5854\u5ee3\u4e00", "41": "\u7531\u65ec\u9ad8\u767e\u7531\u65ec\u773e\u5bf6\u754c\u9053\uff0c\u6469\u5c3c\u771f\u73e0\u6b8a\u5999\u56b4", "42": "\u98fe\uff0c\u7aea\u7acb\u7a2e\u7a2e\u5bf6\u5e62\u5e61\u84cb\uff0c\u81ea\u5728\u738b\u5bf6\u5999\u7db2\u5782\u8986", "43": "\u7a2e\u7a2e\u838a\u56b4\u3002\u82e5\u5fa9\u6709\u4eba\u6df1\u5fc3\u6e05\u6de8\uff0c\u80fd\u65bc\u5982\u662f\u5165", "44": "\u8af8\u4f5b\u5883\u754c\u667a\u5149\u660e\u838a\u56b4\u751a\u6df1\u6b63\u6cd5\uff0c\u805e\u5df2\u4fe1\u89e3", "45": "\u6216\u5fa9\u609f\u5165\uff0c\u8d77\u6e05\u6de8\u5fc3\u5c11\u7565\u4e43\u81f3\u4e00\u56db\u53e5\u5048\u70ba", "46": "\u4eba\u6f14\u8aaa\uff0c\u6b64\u6240\u7372\u798f\u4e0d\u53ef\u7a31\u6578\uff0c\u73fe\u8b49\u4f5b\u667a\u6210\u8fa6", "47": "\u798f\u884c\u6b8a\u52dd\u4e8b\u696d\uff0c\u6bd4\u524d\u83e9\u85a9\u5e03\u65bd\u798f\u860a\uff0c\u767e\u5206\u4e0d", "48": "\u53ca\u4e00\uff0c\u5343\u5206\u4e0d\u53ca\u4e00\uff0c\u767e\u5343\u5206\u4e0d\u53ca\u4e00\uff0c\u5343\u4ff1\u80dd\u5206", "49": "\u4e0d\u53ca\u4e00\uff0c\u767e\u5343\u4ff1\u80dd\u5206\u4e0d\u53ca\u4e00\uff0c\u7b97\u5206\u6578\u5206\u53ca\u8b6c", "5": "\u5584\u4f4f\u4e0d\u5171\u8af8\u6cd5\u4e2d\uff0c\u7a3d\u9996\u4e16\u9593\u5c0a\u52dd\u8005\uff0c", "50": "\u55bb\u5206\u4e43\u81f3\u70cf\u6ce2\u5c3c\u6bba\u66c7\u5206\uff0c\u7686\u4e0d\u53ca\u4e00\u3002\u300c\u53c8\uff0c\u5999\u5409", "51": "\u7965\uff01\u82e5\u6709\u5728\u5bb6\u83e9\u85a9\u65bc\u963f\u50e7\u7947\u6b91\u4f3d\u6c99\u6578\u8af8\u4f5b", "52": "\u83e9\u85a9\u53ca\u8072\u805e\u6240\uff0c\u4ee5\u5176\u98f2\u98df\u3001\u8863\u670d\u3001\u5750\u81e5\u4e4b\u5177\u3001\u75c5", "53": "\u7de3\u91ab\u85e5\uff0c\u7d93\u963f\u50e7\u7947\u6b91\u4f3d\u6c99\u52ab\u4f9b\u7d66\u4f9b\u990a\u3002\u6216\u6709", "54": "\u51fa\u5bb6\u83e9\u85a9\u6212\u884c\u6e05\u6de8\u6df1\u5fc3\u5177\u8db3\uff0c\u65bc\u5176\u4e00\u5207\u725b", "55": "\u755c\u805a\u4e2d\uff0c\u5c11\u7565\u4e43\u81f3\u65bd\u4ee5\u4e00\u98df\uff0c\u6b64\u7372\u798f\u860a\u6bd4\u524d", "56": "\u798f\u860a\uff0c\u767e\u5206\u4e0d\u53ca\u4e00\uff0c\u5343\u5206\u4e0d\u53ca\u4e00\uff0c\u767e\u5343\u5206\u4e0d\u53ca", "57": "\u4e00\uff0c\u5343\u4ff1\u80dd\u5206\u4e0d\u53ca\u4e00\uff0c\u767e\u5343\u4ff1\u80dd\u5206\u4e0d\u53ca\u4e00\uff0c\u7b97", "58": "\u5206\u6578\u5206\u53ca\u8b6c\u55bb\u5206\u4e43\u81f3\u70cf\u6ce2\u5c3c\u6bba\u66c7\u5206\uff0c\u7686\u4e0d", "59": "\u53ca\u4e00\u3002", "6": "\u7a3d\u9996\u80fd\u65b7\u773e\u7d50\u7e1b\uff0c\u7a3d\u9996\u5df2\u4f4f\u65bc\u5f7c\u5cb8\uff0c", "60": "\u300c\u53c8\uff0c\u5999\u5409\u7965\uff01\u82e5\u4e09\u5343\u5927\u5343\u4e16\u754c\u5982\u5fae\u5875\u7b49\u51fa\u5bb6", "61": "\u83e9\u85a9\uff0c\u82e5\u884c\u5177\u8db3\u6df1\u5fc3\u6e05\u6de8\u8005\uff0c\u4e00\u4e00\u83e9\u85a9\u65bc\u5341", "62": "\u65b9\u4e16\u754c\u963f\u50e7\u7947\u6b91\u4f3d\u6c99\u6578\u8af8\u4f5b\u83e9\u85a9\u53ca\u8072\u805e", "63": "\u6240\uff0c\u4ee5\u5176\u98f2\u98df\u3001\u8863\u670d\u3001\u5750\u81e5\u4e4b\u5177\u3001\u75c5\u7de3\u91ab\u85e5\uff0c\u7d93\u963f", "64": "\u50e7\u7947\u6b91\u4f3d\u6c99\u6578\u52ab\u4e2d\u4f9b\u7d66\u4f9b\u990a\uff0c\u5f7c\u8af8\u83e9\u85a9\u6240", "65": "\u7372\u798f\u860a\u5176\u6578\u7121\u91cf\u3002\u82e5\u6709\u83e9\u85a9\u6216\u5728\u5bb6\u8005\u6216\u51fa", "66": "\u5bb6\u8005\uff0c\u6212\u884c\u5177\u8db3\u6df1\u5fc3\u6e05\u6de8\uff0c\u65bc\u6b64\u6b63\u6cd5\u805e\u5df2\u4fe1", "67": "\u89e3\uff0c\u82e5\u81ea\u66f8\u5beb\u6216\u6559\u4eba\u66f8\uff0c\u6b64\u6240\u7372\u798f\u6bd4\u524d\u83e9\u85a9", "68": "\u5e03\u65bd\u798f\u860a\u500d\u5fa9\u589e\u52dd\uff0c\u767e\u5206\u4e0d\u53ca\u4e00\uff0c\u5343\u5206\u4e0d\u53ca", "69": "\u4e00\uff0c\u767e\u5343\u4ff1\u80dd\u3001\u7b97\u6578\u3001\u8b6c\u55bb\uff0c\u7686\u4e0d\u53ca\u4e00\u3002", "7": "\u7a3d\u9996\u6551\u4e16\u8af8\u82e6\u5c0a\uff0c\u7a3d\u9996\u4e0d\u4f4f\u65bc\u751f\u6b7b\u3002", "70": "\u300c\u53c8\uff0c\u5999\u5409\u7965\uff01\u82e5\u6709\u83e9\u85a9\u4ee5\u4e09\u5343\u5927\u5343\u4e16\u754c\u6eff\u4e2d", "71": "\u4e03\u5bf6\uff0c\u7d93\u4e09\u5343\u5927\u5343\u4e16\u754c\u5fae\u5875\u6578\u52ab\uff0c\u5e03\u65bd\u4f9b\u990a", "72": "\u4f5b\u83e9\u85a9\u7b49\u3002\u82e5\u6709\u83e9\u85a9\u65bc\u6b64\u6b63\u6cd5\uff0c\u5c11\u7565\u4e43\u81f3\u4e00", "73": "\u56db\u53e5\u5048\uff0c\u80fd\u89e3\u5165\u8005\u6b64\u6240\u7372\u798f\uff0c\u6bd4\u524d\u798f\u860a\u767e\u5206", "74": "\u4e0d\u53ca\u4e00\uff0c\u5343\u5206\u4e0d\u53ca\u4e00\uff0c\u767e\u5343\u4ff1\u80dd\u3001\u7b97\u6578\u3001\u8b6c\u55bb\uff0c\u7686", "75": "\u4e0d\u53ca\u4e00\u3002", "76": "\u300c\u5999\u5409\u7965\uff01\u4e14\u7f6e\u5982\u4e0a\u7d93\u4e09\u5343\u5927\u5343\u4e16\u754c\u5fae\u5875\u6578", "77": "\u52ab\u5e03\u65bd\u798f\u884c\u3002\u5999\u5409\u7965\uff01\u5047\u4f7f\u963f\u50e7\u7947\u6b91\u4f3d\u6c99\u6578", "78": "\u7b49\u8af8\u83e9\u85a9\uff0c\u4e00\u4e00\u83e9\u85a9\u7686\u65bc\u963f\u50e7\u7947\u6b91\u4f3d\u6c99\u6578", "79": "\u4f5b\u524e\u571f\u4e2d\uff0c\u4ee5\u95bb\u6d6e\u6a80\u91d1\u6240\u6210\u8af8\u5999\u5bf6\u6a39\u53ca\u6b8a", "8": "\u666e\u904d\u901a\u9054\u773e\u751f\u884c\uff0c\u65bc\u4e00\u5207\u8655\u96e2\u610f\u5ff5\uff0c", "80": "\u5999\u8863\u670d\uff0c\u666e\u904d\u5149\u660e\u771f\u73e0\u6469\u5c3c\u5bf6\u7db2\u5782\u8986\uff0c\u81ea\u5728", "81": "\u738b\u6469\u5c3c\u5bf6\u6240\u6210\u6a13\u95a3\uff0c\u4ee5\u96fb\u5149\u660e\u6469\u5c3c\u5bf6\u800c\u70ba", "82": "\u754c\u9053\uff0c\u7aea\u7acb\u6b8a\u5999\u5e62\u5e61\u5bf6\u84cb\uff0c\u5713\u6eff\u4f5c\u5df2\uff0c\u666e\u70ba\u963f", "83": "\u50e7\u7947\u6b91\u4f3d\u6c99\u6578\u4f5b\u4e16\u5c0a\u7b49\u65e5\u65e5\u4f9b\u990a\uff0c\u5982\u662f\u7d93", "84": "\u4e8e\u963f\u50e7\u7947\u6b91\u4f3d\u6c99\u52ab\u4fee\u5e03\u65bd\u884c\u3002\u6216\u6709\u83e9\u85a9\u65bc", "85": "\u6b64\u6700\u4e0a\u751a\u6df1\u6b63\u6cd5\u751f\u4fe1\u89e3\u5df2\uff0c\u5c11\u7565\u4e43\u81f3\u4e00\u56db", "86": "\u53e5\u5048\uff0c\u70ba\u9918\u83e9\u85a9\u5982\u7406\u5ba3\u8aaa\u4ee4\u5176\u89e3\u5165\uff0c\u6b64\u7372\u798f", "87": "\u860a\u6bd4\u524d\u83e9\u85a9\u5e03\u65bd\u798f\u860a\uff0c\u767e\u5206\u4e0d\u53ca\u4e00\uff0c\u5343\u5206\u4e0d", "88": "\u53ca\u4e00\uff0c\u767e\u5343\u4ff1\u80dd\u3001\u7b97\u6578\u3001\u8b6c\u55bb\uff0c\u7686\u4e0d\u53ca\u4e00\u3002", "89": "\u300c\u53c8\uff0c\u5999\u5409\u7965\uff01\u6b63\u4f7f\u4e09\u754c\u6210\u5df2\uff0c\u6240\u6709\u4e00\u5207\u5730\u7344\u3001\u9913", "9": "\u5982\u84ee\u4e0d\u8457\u65bc\u6c34\u4e2d\uff0c\u6de8\u7a7a\u5bc2\u9ed8\u5e38\u89aa\u8fd1\u3002", "90": "\u9b3c\u3001\u755c\u751f\u8da3\u4e2d\u8af8\u773e\u751f\u985e\uff0c\u82e5\u6709\u5728\u5bb6\u83e9\u85a9\u70ba\u5f7c", "91": "\u5730\u7344\u3001\u9913\u9b3c\u3001\u755c\u751f\u8da3\u4e2d\u4e00\u5207\u773e\u751f\u666e\u4ee4\u6551\u62d4\uff0c\u5f97", "92": "\u51fa\u96e2\u5df2\u7686\u6089\u5efa\u7acb\u6210\u7de3\u89ba\u679c\u3002\u82e5\u6709\u51fa\u5bb6\u83e9\u85a9", "93": "\u65bc\u8af8\u725b\u755c\u805a\u4e2d\uff0c\u5c11\u7565\u4e43\u81f3\u65bd\u4ee5\u4e00\u98df\uff0c\u6b64\u6240\u7372", "94": "\u798f\u7121\u6709\u7a31\u91cf\u3002", "95": "\u300c\u53c8\uff0c\u5999\u5409\u7965\uff01\u6b63\u4f7f\u5341\u65b9\u6240\u6709\u4e00\u5207\u4f5b\u524e\u571f\u4e2d\uff0c\u4e0d", "96": "\u53ef\u8aaa\u4ff1\u80dd\u90a3\u5ebe\u591a\u767e\u5343\u5982\u5fae\u5875\u7b49\u51fa\u5bb6\u83e9\u85a9\uff0c", "97": "\u4e00\u4e00\u83e9\u85a9\u65bc\u5341\u65b9\u4e16\u754c\uff0c\u4e00\u4e00\u65b9\u5206\u7686\u6709\u5341\u4f5b\u524e", "98": "\u4e0d\u53ef\u8aaa\u4ff1\u80dd\u90a3\u5ebe\u591a\u767e\u5343\u5982\u5fae\u5875\u7b49\u8af8\u4f5b\u4e16", "99": "\u5c0a\uff0c\u5f7c\u4e00\u4e00\u4f5b\u5e76\u8af8\u83e9\u85a9\u8072\u805e\u5927\u773e\uff0c\u7d93\u5341\u4f5b\u524e"}, "source": "CBETA", "language": "chinese", "originalTitle": "Taisho Tripitaka, Electronic version, No. 0359 \u4f5b\u8aaa\u5927\u4e58\u5165\u8af8\u4f5b\u5883\u754c\u667a\u5149\u660e\u838a\u56b4\u7d93: \u4f5b\u8aaa\u5927\u4e58\u5165\u8af8\u4f5b\u5883\u754c\u667a\u5149\u660e\u838a\n\u56b4\u7d93: \u4f5b\u8aaa\u5927\u4e58\u5165\u8af8\u4f5b\u5883\u754c\u667a\u5149\u660e\u838a\u56b4\u7d93", "author": "\u5b8b \u6cd5\u8b77\u7b49\u8b6f", "sourceLink": "http://www.cbeta.org/"}