3000\u5357\u7121\u8af8\u4f5b\u5f1f\u5b50\u3002\u5357\u7121\u5229\u9589\u5229\u9b3c\u795e", "199": "\u738b\u79ae\u662f\u5df2\u8aaa\u6b64\u546a\u7d93\u5373\u5f9e\u5982\u9858\u3002", "2": "\u5931\u8b6f\u4eba\u540d\u4eca\u9644\u79e6\u9304", "20": "\u9ed1\u95c7\u4e8c\u540d\u4f5c\u9ed1\u95c7\u3002\u4e09\u540d\u9ce9\u69c3\u8336\u56db\u540d\u767d\u5177\u3002\u4e94", "200": "\u5317\u65b9\u6709\u5c71\u540d\u63f5\u9640\u6469\u8a36\u884d\u3002\u6709\u9b3c\u795e\u540d\u5229\u9589\u5229\u3002", "201": "\u5c45\u5c71\u5f7c\u6709\u662f\u56db\u5e2b\u5f1f\u5b50\u3000\u5b89\u9640\u5c3c\u3000\u9589\u6469\u5c3c", "202": "\u6522\u5475\u5c3c\u3000\u4ee4\u8cca\u5fd8\u9589\u5c3c\u3000\u4ee4\u8cca\u6025\u5750\u3000\u6284\u591a", "203": "\u6469\u5c3c\u3000\u4ee4\u8cca\u6025\u751f\u3000\u7acb\u6522\u5475\u5c3c\u3000\u4ee4\u8cca\u611a\u7661", "204": "\u5982\u662f\u70cf\u4e0d\u7f85\u5229\u9640\u63d0\u6469\u3000\u9589\u8fe6\u5229\u7576\u642d\u8cca\u53e3", "205": "\u9f52\u3002", "206": "\u81f3\u89e3\u7e37\u4e43\u89e3\u6211\u67d0\u7532\u64c1\u8b77\u3002\u8f9f\u9664\u51f6\u60e1\u5bb3\u8cca\u8005\u3002", "207": "\u7686\u92b7\u6ec5\u4ee4\u5176\u96b1\u3002\u521d\u8aaa\u662f\u546a\u8cca\u7d93\u6642\u3002\u7576\u4ee5\u4e8c\u5341", "208": "\u4e5d\u65e5\u70ba\u5475\u5229\u63d0\u8036\u3002\u7136\u71c8\u71d2\u81a0\u9999\u70ba\u4f0a\u6016\u7136\u3002\u4e03", "209": "\u71c8\u812b\u6563\u83ef\u3002\u70ba\u9b3c\u5b50\u6bcd\u7136\u4e03\u71c8\u3002\u9b3c\u5b50\u6bcd\u524d\u8b80\u662f", "21": "\u540d\u83ef\u773c\u516d\u540d\u53d6\u5b50\u3002\u4e03\u540d\u53d6\u9aee\u516b\u540d\u4f5c\u9ec3\u3002\u4e5d\u540d", "210": "\u4e03\u904d\u3002\u4e43\u5409\u3002\u5408\u865f\u5229\u96e2\u9b3c\u5b50\u738b\u5f97\u798f\u5fb7\u3002\u70ba\u7136\u4e03", "211": "\u71c8\u4e43\u71d2\u9999\u6563\u83ef\u3002", "212": "\u6cd5\u83ef\u795e\u5492\u7d93\u6cd5\u83ef\u795e\u546a\u7d93", "213": "\u5b89\u723e\u66fc\u723e\u3000\u6469\u79b0\u6469\u79b0\u3000\u65e8\u96b7\u65e8\u96b8\u3000\u906e\u68a8\u5f1f", "214": "\u8cd2\u54a9\u8cd2\u5c65\u591a\u97cb\u64c5\u5e1d\u3000\u76ee\u5e1d\u3000\u76ee\u591a\u76ee\u591a\u3000\u5c65", "215": "\u6c99\u5c65\u963f\u97cb\u5a11\u5c65\u3000\u55aa\u5c65\u5a11\u5c65\u3000\u53c9\u88d4\u963f\u963f\u95cd", "216": "\u81a9\u64c5\u5e1d\u3000\u963f\u53c9\u88d4\u3000\u8cd2\u5c65\u9640\u7f85\u5c3c\u3000\u963f\u76e7\u4f3d", "217": "\u5a46\u7c38\u906e\u6bd8\u53c9\u81a9\u79b0\u6bd8\u5243\u3000\u963f\u4fbf\u543c\u7f85\u79b0\u5229", "218": "\u5243\u963f\u76e7\u54c6\u5a46\u3000\u96b7\u8f38\u9640\u6f1a\u7a76\u96b7\u3000\u963f\u7f85\u96b7", "219": "\u5a46\u7f85\u68a8\u3000\u9996\u8fe6\u5dee\u3000\u963f\u4e09\u6469\u4e09\u5c65\u3000\u4f5b\u9640\u5409", "22": "\u5782\u4e0b\u5341\u540d\u6975\u5782\u4e0b\u3002\u5341\u4e00\u540d\u4f3a\u4fbf\u5341\u4e8c\u540d\u95bb\u7f85", "220": "\u6bd8\u5229\u6c42\u5e1d\u3000\u9054\u6469\u6ce2\u5229\u5dee\u5e1d\u50e7\u4f3d\u6d85\u77bf\u6c99\u79b0", "221": "\u5a46\u820d\u5a46\u820d\u8f38\u9640\u3000\u66fc\u591a\u7f85\u53c9\u66fc\u591a\u7f85\u53c9", "222": "\u6396\u591a\u3000\u90a3\u5a41\u591a\u90a3\u5a41\u591a\u618d\u820d\u7565\u3000\u60e1\u53c9\u908f", "223": "\u60e1\u53c9\u51b6\u591a\u51b6\u3000\u963f\u5a46\u76e7\u3000\u963f\u6469\u90a3\u3000\u591a\u6396", "224": "\u4e16\u5c0a\u662f\u9640\u7f85\u5c3c\u546a\u3002\u516d\u5341\u4e8c\u6052\u6cb3\u6c99\u8af8\u4f5b\u6240\u8aaa\u3002", "225": "\u82e5\u6709\u4fb5\u6bc0\u662f\u6cd5\u5e2b\u8005\u3002\u5247\u70ba\u4fb5\u6bc0\u662f\u8af8\u4f5b\u5df2\u3002", "226": "\u52c7\u65bd\u6240\u8aaa\u546a", "227": "\u5ea7\u96b7\u3000\u6469\u5475\u5ea7\u96b7\u90c1\u67b3\u76ee\u53ea\u963f\u7f85\u96b7\u963f\u7f85\u5a46", "228": "\u7b2c\u6d85\u96b7\u7b2c\u3000\u6d85\u96b7\u591a\u7f85\u7b2c\u3000\u4f0a\u81f4\u62b3\u97cb\u81f4\u62b3", "229": "\u6d85\u96b7\u6431\u3000\u6d85\u96b7\u981e\u5a46\u5e95", "23": "\u4f7f\u3002\u5341\u4e09\u540d\u95bb\u7f85\u7f85\u524e\u5341\u56db\u540d\u5649\u9b3c\u3002\u6c5d\u7b49\u53d7\u6211", "230": "\u4e16\u5c0a\u662f\u9640\u7f85\u5c3c\u546a\u3002\u6052\u6cb3\u6c99\u8af8\u4f5b\u6240\u8aaa\u3002", "231": "\u6bd8\u6c99\u9580\u5929\u738b\u6240\u8aaa\u546a", "232": "\u963f\u5229\u90a3\u5229\u3000\u3779\u90a3\u5229\u3000\u963f\u90a3\u76e7\u90a3\u5c65\u3000\u62d8\u90a3\u5c65", "233": "\u6301\u570b\u5929\u738b\u6240\u8aaa\u546a", "234": "\u963f\u8fe6\u79b0\u4f3d\u79b0\u3000\u77bf\u5229\u4e7e\u9640\u5229\u3000\u65c3\u9640\u5229\u3000\u6469\u77aa", "235": "\u8006\u3000\u5e38\u6c42\u5229\u6d6e\u5a41\u6c99\u62b3\u981e\u5e95", "236": "\u4e16\u5c0a\u662f\u546a\u56db\u5341\u4e8c\u5104\u8af8\u4f5b\u6240\u8aaa\u3002", "237": "\u7f85\u524e\u5973\u6240\u8aaa\u546a", "238": "\u4f0a\u63d0\u5c65\u3000\u4f0a\u63d0\u6cef\u3000\u4f0a\u63d0\u5c65\u3000\u963f\u63d0\u5c65\u3000\u4f0a\u63d0", "239": "\u5c65\u3000\u6cef\u5c65\u3000\u6cef\u5c65\u3000\u6cef\u5c65\u3000\u6cef\u5c65\u3000\u6cef\u5c65\u3000\u5a41", "24": "\u83ef\u9999\u98f2\u98df\u3002\u64c1\u8b77\u67d0\u7532\u53ca\u8af8\u7737\u5c6c\u3002\u4f7f\u6211\u546a\u53e5\u5982", "240": "\u91af\u3000\u5a41\u91af\u3000\u5a41\u91af\u3000\u5a41\u91af\u3000\u591a\u91af\u3000\u591a\u91af", "241": "\u515c\u91af\u3000\u3779\u91af\u3000\u5be7\u4e0a\u6211\u982d\u4e0a\u83ab\u60f1\u4e82\u6b64\u6cd5", "242": "\u5e2b\u8005\u3002\u982d\u7834\u4e03\u5206\u5982\u963f\u68a8\u6a39\u679d\u3002", "243": "\u5927\u6d85\u69c3\u7d93\u546a\u3002\u7b2c\u516d\u5929\u9b54\u738b\u6ce2\u65ec\u6240\u8aaa\u546a\u3002\u5353", "244": "\u67b3\u3000\u5412\u5412\u7f85\u5353\u67b3\u3000\u76e7\u5475\u96b7\u6469\u8a36\u3000\u76e7\u5475", "245": "\u5229\u963f\u7f85\u3000\u906e\u7f85\u591a\u7f85\u6c99\u5475", "246": "\u723e\u6642\u4e16\u5c0a\u53d7\u5176\u795e\u546a\u4e0d\u53d7\u4f9b\u990a\u3002", "247": "\u4f5b\u8aaa\u5927\u91d1\u8272\u5b54\u96c0\u738b\u546a\u7d93", "25": "\u610f\u6210\u5c31\u5409\u3002", "26": "\u723e\u6642\u6211\u805e\u3002\u4e00\u6642\u4f5b\u4f4f\u820d\u885b\u570b\u7947\u6a39\u7d66\u5b64\u7368\u5712\u3002", "27": "\u723e\u6642\u5712\u4e2d\u6709\u4e00\u5e74\u5c11\u6bd4\u4e18\u540d\u66f0\u5409\u7965\u3002\u51fa\u5bb6\u672a", "28": "\u4e45\u70ba\u50e7\u6d17\u6d74\u7834\u85aa\u3002\u6642\u6709\u7570\u6728\u4e0b\u6709\u4e00\u9ed1\u86c7\u4f86\u3002", "29": "\u87ab\u6bd4\u4e18\u8db3\u6307\u3002\u60b6\u7d55\u8e84\u5730\u76ee\u7ffb\u5410\u6cab\u3002\u723e\u6642\u9577\u8001", "3": "\u5357\u7121\u4f5b\u5357\u7121\u6cd5\u5357\u7121\u6bd4\u4e18\u50e7\u3000\u5357\u7121\u4e03\u4f5b\u7b49\u6b63", "30": "\u963f\u96e3\u3002\u898b\u5409\u7965\u6bd4\u4e18\u6240\u60a3\u6975\u91cd\u3002\u898b\u5df2\u60f6\u6016\u5f80\u8a63", "31": "\u4f5b\u6240\u3002\u982d\u9762\u8457\u5730\u70ba\u4f5b\u4f5c\u79ae\u3002\u524d\u767d\u4f5b\u8a00\u4e16\u5c0a\u3002\u6b64", "32": "\u820d\u885b\u570b\u7947\u6a39\u7d66\u5b64\u7368\u5712\u4e2d\u3002\u6709\u4e00\u65b0\u5b78\u6bd4\u4e18\u540d", "33": "\u66f0\u5409\u7965\u3002\u70ba\u50e7\u6d17\u6d74\u7834\u85aa\u3002\u7570\u6728\u4e0b\u6709\u4e00\u9ed1\u86c7\u51fa\u3002", "34": "\u87ab\u6bd4\u4e18\u53f3\u8db3\u6307\u3002\u60b6\u7d55\u8e84\u5730\u76ee\u7ffb\u5410\u6cab\u4e91\u4f55\u6cbb", "35": "\u4e4b\u3002\u723e\u6642\u4f5b\u544a\u963f\u96e3\u3002\u6c5d\u6301\u5982\u4f86\u5927\u5b54\u96c0\u738b\u546a\u7d93\u3002", "36": "\u64c1\u8b77\u5409\u7965\u6bd4\u4e18\u3002\u8207\u7d50\u754c\u7d50\u546a\u3002\u4f7f\u6bd2\u4e0d\u80fd\u5bb3\u3002", "37": "\u5200\u6756\u4e0d\u52a0\u773e\u60a3\u6089\u9664\u3002\u82e5\u5929\u6240\u70ba\u82e5\u9f8d\u6240\u70ba\u3002\u6469", "38": "\u6a13\u591a\u6240\u70ba\u8fe6\u6a13\u7f85\u6240\u70ba\u3002\u4e7e\u95e5\u5a46\u6240\u70ba\u7dca\u90a3\u7f85", "39": "\u6240\u70ba\u3002\u6469\u777a\u7f85\u4f3d\u6240\u70ba\u591c\u53c9\u6240\u70ba\u3002\u7f85\u524e\u6240\u70ba", "4": "\u89ba\u3002\u5357\u7121\u8f9f\u652f\u4f5b\u5357\u7121\u8af8\u7f85\u6f22\u3002\u5357\u7121\u5f4c\u52d2\u7b49\u4e00", "40": "\u9913\u9b3c\u6240\u70ba\u3002\u6bd8\u820d\u906e\u6240\u70ba\u6d6e\u9640\u6240\u70ba\u3002\u9ce9\u69c3\u8336", "41": "\u6240\u70ba\u5bcc\u55ae\u90a3\u6240\u70ba\u3002\u9ed1\u5bcc\u55ae\u90a3\u6240\u70ba\u4e7e\u9640\u6240\u70ba\u3002", "42": "\u7185\u6469\u9640\u6240\u70ba\u8eca\u8036\u6240\u70ba\u3002\u963f\u9262\u6469\u7f85\u6240\u70ba\u6b1d\u591a", "43": "\u4f3d\u6240\u70ba\u3002\u5409\u906e\u6240\u70ba\u7faf\u78e8\u90a3\u6240\u70ba\u3002\u4f49\u8ec0\u9640\u6240", "44": "\u70ba\u7fc5\u862d\u90a3\u6240\u70ba\u3002\u6bd8\u591a\u8336\u6240\u70ba\u8102\u906e\u6240\u70ba\u3002\u5351", "45": "\u6c99\u8fe6\u6240\u70ba\u3002\u82e5\u975e\u6cd5\u98df\u975e\u6cd5\u5410\u3002\u975e\u6cd5\u8996\u975e\u6cd5\u8209\u3002", "46": "\u975e\u6cd5\u8d8a\u975e\u6cd5\u89f8\u3002\u82e5\u6709\u71b1\u75c5\u4e00\u65e5\u4e8c\u65e5\u3002\u4e09\u65e5\u56db", "47": "\u65e5\u4e94\u65e5\u516d\u65e5\u3002\u4e03\u65e5\u534a\u6708\u4e00\u6708\u3002\u4e00\u65e5\u4e00\u6642\u767c\u9593", "48": "\u767c\u3002\u82e5\u9b3c\u795e\u71b1\u75c5\u98a8\u706b\u6c34\u4f5c\u3002\u970d\u4e82\u71b1\u3002\u82e5\u534a\u8eab", "49": "\u75db\u982d\u75db\u773c\u75db\u3002\u9762\u75db\u9826\u75db\u54bd\u5589\u75db\u9805\u75db\u3002\u8033\u75db", "5": "\u5207\u83e9\u85a9\u3002\u5357\u7121\u8af8\u963f\u90a3\u542b\u5357\u7121\u65af\u9640\u542b\u5357\u7121\u9808", "50": "\u9f52\u75db\u3002\u53e3\u75db\u5fc3\u75db\u80cc\u75db\u3002\u8179\u75db\u3002\u8170\u75db\u9670\u75db\u9ac0\u75db\u3002\u9ac6", "51": "\u624b\u75db\u811a\u75db\u3002\u652f\u7bc0\u75db\u4e00\u5207\u3002\u8af8\u75db\u7686\u4ee4\u9664\u6108\u64c1", "52": "\u8b77\u67d0\u7532\u8aaa\u5048\u546a\u66f0\u3002", "53": "\u665d\u5b89\u591c\u5b89\u3000\u4e2d\u9593\u5e38\u5b89\u3000\u665d\u591c\u5b89\u96b1\u3000\u8af8\u4f5b\u6240", "54": "\u8b77", "55": "\u5373\u8aaa\u546a\u66f0\u3002", "56": "\u4f0a\u7a1a\u6bd4\u7a1a\u3000\u5409\u7a1a\u8fc4\u7a1a\u3000\u5a46\u7a1a\u5c3c\u7a1a\u3000\u963f\u7a1a", "57": "\u4f3d\u7a1a\u3000\u8c46\u52a0\u7a1a\u3000\u963f\u7a1a\u69c3\u6c42\u7a1a\u3000\u5a46\u4fee\u5351\u3000\u820d", "58": "\u8102\u3000\u81a9\u963f\u5a41\u5475\u81a9\u3000\u5a46\u5a41\u8a36\u81a9\u3000\u70cf\u5a41\u5475\u81a9", "59": "\u4f0a\u96b8\u5f4c\u96b8\u5e1d\u3000\u96b8\u5e1d\u96b8\u3000\u5f4c\u96b8\u5e1d\u3000\u96b8\u982d\u96b8\u982d", "6": "\u9640\u6d39\u3002\u5357\u7121\u4e16\u9593\u6b63\u4fe1\u5411\u8005\u3002\u6211\u79ae\u5f7c\u773e\u5df2\u3002\u6b32", "60": "\u982d\u96b8\u3000\u4f0a\u7dfb\u5f4c\u7dfb\u3000\u6bd8\u7375\u5730\u6bd8\u6469\u5229\u4f11\u5a41\u4f11\u5a41", "61": "\u963f\u820d\u5a46\u5951\u4f3d\u7a1a\u6469\u8a36\u4f3d\u7a1a\u5a46\u67b3\u90a3\u67b3\u53ea\u53e5\u5a41", "62": "\u53e5\u5a41\u591a\u7834\u6f0f\u92f8\u5a41\u92f8\u5a41\u5ea6\u6c99\u66c7\u5a46\u5ea6\u66c7\u5a46\u8c46\u6469", "63": "\u66c7\u5a46\u77bf\u90a3\u8036\u6bd4\u7f85\u8036\u3000\u91af\u8f38\u91af\u8f38\u3000\u91af\u5229\u91af\u5229", "64": "\u5f4c\u5229\u5f4c\u5229\u3000\u5e95\u5229\u5e95\u5229\u3000\u5468\u6f0f\u5468\u6f0f\u3000\u8302\u543c", "65": "\u8302\u543c\u3000\u8302\u543c\u8302\u543c\u3000\u8302\u6f0f\u8302\u6f0f\u3000\u8302\u6f0f\u8302\u6f0f\u8302", "66": "\u6f0f\u3000\u543c\u543c\u543c\u543c\u543c\u543c\u543c\u543c\u3000\u543c\u5a46\u543c\u5a46\u5a46\u5a46\u5a46", "67": "\u5a46\u5a46\u5a46\u5a46\u5a46\u95cd\u5a46\u95cd\u7f85\u95cd\u95cd\u7f85\u3000\u95cd\u95cd\u7f85\u3000\u6469", "68": "\u9640\u6469\u9640\u79b0\u3000\u54c6\u5a46\u54c6\u5a46\u79b0\u3000\u5ea7\u5a46\u5ea7\u5a46\u7f85\u7f85\u79b0", "69": "\u9322\u982d\u9f3b\u4f3d\u95cd\u79b0\u62d4\u3000\u6c99\u79b0\u6016\u5412\u79b0\u3000\u5a46\u906e\u79b0", "7": "\u8aaa\u5927\u5b54\u96c0\u738b\u546a\u7d93\u3002\u9858\u5982\u610f\u6210\u5c31\u3002\u5409", "70": "\u528d\u5a46\u79b0\u3000\u6469\u9640\u79b0\u3000\u6162\u9072\u3000\u7dfb\u8fe6\u6469\u8fe6\u5229\u3000\u820d", "71": "\u5229\u8fe6\u52a0\u5229\u3000\u820d\u8fe6\u3000\u5ea7\u5229\u5a46\u7f85\u79b0\u3000\u982d\u6469\u982d\u6469", "72": "\u5229\u3000\u5a46\u723e\u5f4c\u3000\u5177\u7f85\u591c\u5a46\u3000\u5229\u6bd8\u7f85\u591c\u3000\u62d4\u6c99", "73": "\u982d\u63d0\u5a46\u3000\u6c99\u6eff\u982d\u63d0\u5a46\u3000\u6c99\u6eff\u63d0\u90a3\u3000\u4f0a\u53ea\u5229", "74": "\u6b7b\u6089\u6ce2\u5475", "75": "\u6b64\u5927\u5b54\u96c0\u738b\u546a\u7d93\u3002\u671d\u8aaa\u81ea\u8b77\u665d\u5247\u5b89\u96b1\u3002\u66ae\u8aaa", "76": "\u81ea\u8b77\u591c\u5247\u5b89\u96b1\u3002\u5373\u8aaa\u546a\u66f0\u3002", "77": "\u543c\u543c\u543c\u543c\u543c\u543c\u3000\u90a3\u4f3d\u5229\u96e2\u3000\u66c7\u5a46\u3000\u68a8\u68a8", "78": "\u96e2\u6bd8\u6469\u68a8\u68a8\u96e2\u3000\u6689\u591c\u6689\u591c\u3000\u6bd8\u95cd\u6bd8\u95cd\u3000\u515c", "79": "\u5099\u6c42\u5099\u3000\u4f0a\u7f85\u5f4c\u7f85\u3000\u4f0a\u4f3d\u7f85\u5f4c\u3000\u4f0a\u5229\u5f4c\u7f85", "8": "\u8af8\u9b3c\u795e\u7b49\u660e\u807d\u3002\u82e5\u7a7a\u865b\u5728\u5730\u53ca\u6c34\u5c45\u8005\u3002\u5929\u9f8d", "80": "\u4f0a\u5229\u5f4c\u5e1d\u5229\u3000\u77e5\u5229\u5f4c\u5229\u4f0a\u77e5\u5229\u91af\u5229\u3000\u5e1d", "81": "\u5229\u5f4c\u5e1d\u5229\u3000\u4fee\u5229\u5f4c\u5e1d\u5229\u3000\u59ac\u4fee\u59ac\u8862\u7f85\u652f\u7f85", "82": "\u906e\u5a46\u7f85\u3000\u6bd8\u7f85\u906e\u3000\u4f0a\u77e5\u5229\u6bd8\u77e5\u5229\u77e5\u5229", "83": "\u5357\u7121\u963f\u7f85\u5475\u9640\u3000\u963f\u7f85\u9640\u7f85\u3000\u62d4\u6c99\u982d\u63d0\u6ce2\u4e09", "84": "\u6eff\u63d0\u90a3", "85": "\u963f\u96e3\u6211\u4eca\u70ba\u6c5d\u8aaa\u5927\u5b54\u96c0\u738b\u5fc3\u546a\u3002\u5373\u8aaa\u546a\u66f0\u3002", "86": "\u4f0a\u7dfb\u5f4c\u7dfb\u5e1d\u5229\u5351\u5229\u5f4c\u7dfb\u5f4c\u5229\u3002\u5e1d\u5f4c\u85ea\u66c7\u5a46", "87": "\u515c\u5a46\u3000\u4fee\u5a46\u81f3\u5229\u3000\u5409\u6bd8\u591c\u6bd8\u90a3\u5f4c\u7a1a\u3000\u5357\u7121", "88": "\u4f5b\u9640\u5357\u3000\u81f3\u5229\u5409\u6b7b\u3000\u5a46\u591a\u725f\u68a8\u4f0a\u7dfb\u8a36\u7f85", "89": "\u76e7\u91af\u591a\u725f\u7f85\u515c\u5a46\u83f4\u5a46\u3000\u9ce9\u81f4\u9ce9\u9ce9\u90a3\u81f4\u9ce9\u90a3", "9": "\u963f\u4fee\u7f85\u6469\u6a13\u591a\u8fe6\u6a13\u7f85\u4e7e\u95e5\u5a46\u7dca\u90a3\u7f85\u6469\u777a\u7f85", "90": "\u81f4\u3000\u77e5\u7f85\u9ce9\u95cd\u90a3\u81f4\u3000\u963f\u8336\u62d4\u591a\u591c\u90a3\u5a46\u9b54", "91": "\u6c99\u9640\u820d\u9b54\u8cdc\u5e1d\u3000\u4f0a\u5229\u5f4c\u5229\u3000\u5409\u5229\u5f4c\u5229\u3000\u7fc5", "92": "\u7f85\u5f4c\u7f85\u3000\u7fc5\u6597\u725f\u96b8\u3000\u982d\u982d\u6469\u85a9\u982d\u5f4c\u5229\u9640\u5229", "93": "\u5f4c\u3000\u85a9\u6d6e\u5a46\u5e1d\u3000\u6d6e\u85a9\u5e1d\u3000\u6d6e\u85a9\u5e1d\u4f0a\u7f85\u5a46\u6089", "94": "\u54c6\u3000\u5a46\u7fc5\u90a3\u8fe6\u7f85\u3000\u90a3\u7f85\u6469\u5409\u5229\u3000\u5f4c\u7f85\u4f76", "95": "\u7f85\u3000\u6469\u7d50\u96b8\u3000\u4f0a\u5e1d\u85a9\u95cd\u96b8\u3000\u515c\u5099\u515c\u5099\u3000\u963f", "96": "\u5e1d\u5a46\u7f85\u90a3\u5e1d\u3000\u963f\u90a3\u90a3\u90a3\u5e1d\u3000\u62d4\u6c99\u982d\u63d0\u5a46\u8036", "97": "\u5584\u9640\u3000\u7fc5\u90a3\u90a3\u3000\u7f85\u8fc4\u7a1a\u3000\u5a46\u7f85\u8fc4\u7a1a\u3000\u8a36", "98": "\u5229\u591a\u5229\u3000\u9ce9\u591a\u5229\u3000\u4f0a\u5229\u5f4c\u5229\u3000\u5409\u5e1d\u5229\u5f4c\u5e1d", "99": "\u4f0a\u5229\u5f4c\u3000\u6089\u8b5a\u3000\u8c46\u9640\u7f85\u3000\u6bd8\u9640\u6c99\u6ce2\u8a36"}, "source": "CBETA", "language": "chinese", "originalTitle": "Taisho Tripitaka, Electronic version, No. 0987 \u4f5b\u8aaa\u5927\u91d1\u8272\u5b54\u96c0\u738b\u546a\u7d93", "author": "\u5931\u8b6f", "sourceLink": "http://www.cbeta.org/"}