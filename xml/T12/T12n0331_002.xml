<app from="#beg0067006" to="#end0067006"><lem wit="#wit1">淡</lem><rdg resp="#resp1" wit="#wit3 #wit4 #wit2">痰</rdg></app>
<app from="#beg0067007" to="#end0067007"><lem wit="#wit1">吸</lem><rdg resp="#resp1" wit="#wit4">及</rdg></app>
<app from="#beg_3" to="#end_3"><lem wit="#wit5 #wit6" resp="#resp3">上<note type="cf1">K40n1468_p0814a08</note></lem><rdg wit="#wit1">長</rdg></app>
<app from="#beg0068001" to="#end0068001"><lem wit="#wit1">噉</lem><rdg resp="#resp1" wit="#wit3">敢</rdg></app>
<app from="#beg_4" to="#end_4"><lem wit="#wit5 #wit6" resp="#resp3">受<note type="cf1">K40n1468_p0815a03</note></lem><rdg wit="#wit1">愛</rdg></app>
<app from="#beg0068002" to="#end0068002"><lem wit="#wit1">緣</lem><rdg resp="#resp1" wit="#wit3 #wit4 #wit2">終</rdg></app>
