<app from="#beg0426001" to="#end0426001"><lem wit="#wit1">重</lem><rdg resp="#resp1" wit="#wit3 #wit4 #wit5 #wit6 #wit7">熏</rdg></app>
<app from="#beg0426002" to="#end0426002"><lem wit="#wit1">謂</lem><rdg resp="#resp1" wit="#wit3 #wit4 #wit5 #wit6">諸</rdg></app>
