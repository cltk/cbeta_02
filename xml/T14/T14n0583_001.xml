<app from="#beg0967004" to="#end0967004"><lem wit="#wit1">江</lem><rdg resp="#resp1" wit="#wit5">河</rdg></app>
<app from="#beg0967005" to="#end0967005"><lem wit="#wit1">初</lem><rdg resp="#resp1" wit="#wit4">祈</rdg></app>
