<app from="#beg0794001" to="#end0794001"><lem wit="#wit1">以</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5"><space quantity="0"/></rdg></app>
<app from="#beg0794002" to="#end0794002"><lem wit="#wit1">取</lem><rdg resp="#resp1" wit="#wit3 #wit4">彼</rdg></app>
