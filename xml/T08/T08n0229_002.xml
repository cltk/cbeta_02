<app from="#beg0679011" to="#end0679011"><lem wit="#wit1">至</lem><rdg resp="#resp1" wit="#wit2 #wit3">到</rdg></app>
<app from="#beg0679012" to="#end0679012"><lem wit="#wit1">力諸根</lem><rdg resp="#resp1" wit="#wit2 #wit3">方諸根</rdg></app>
<app from="#beg0680003" to="#end0680003"><lem wit="#wit1">超</lem><rdg resp="#resp1" wit="#wit4 #wit2">起</rdg></app>
<app from="#beg0680004" to="#end0680004"><lem wit="#wit1">無</lem><rdg resp="#resp1" wit="#wit3">不</rdg></app>
