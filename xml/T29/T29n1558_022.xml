<app from="#beg0116009" to="#end0116009"><lem wit="#wit1">聚</lem><rdg resp="#resp1" wit="#wit3 #wit4 #wit2 #wit5">取</rdg></app>
<app from="#beg0116010" to="#end0116010"><lem wit="#wit1">具</lem><rdg resp="#resp1" wit="#wit5">其</rdg></app>
