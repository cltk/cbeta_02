<app from="#beg0110003" to="#end0110003"><lem wit="#wit1">識</lem><rdg resp="#resp1" wit="#wit3 #wit4 #wit2 #wit5">諸</rdg></app>
<app from="#beg0110004" to="#end0110004"><lem wit="#wit1">善</lem><rdg resp="#resp1" wit="#wit5">蓋</rdg></app>
