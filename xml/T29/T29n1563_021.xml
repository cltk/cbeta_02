<app from="#beg_55" to="#end_55" corresp="#0873005"><lem wit="#wit1">唯</lem><rdg resp="#resp1" wit="#wit3 #wit4 #wit2 #wit5">惟</rdg></app>
<app from="#beg0874005" to="#end0874005"><lem wit="#wit1">名</lem><rdg resp="#resp1" wit="#wit3 #wit4 #wit2 #wit5">多</rdg></app>
