<cb:div type="apparatus">
<head>校勘記</head>
<p>
<app from="#beg0795001" to="#end0795001"><lem wit="#wit1">上</lem><rdg resp="#resp1" wit="#wit7">一</rdg></app>
<app from="#beg0795002" to="#end0795002"><lem wit="#wit1">謂</lem><rdg resp="#resp1" wit="#wit4 #wit2">諸</rdg></app>
<app from="#beg0795003" to="#end0795003"><lem wit="#wit1">曰</lem><rdg resp="#resp1" wit="#wit3 #wit5 #wit7">言</rdg></app>
<app from="#beg0795004" to="#end0795004"><lem wit="#wit1">現</lem><rdg resp="#resp1" wit="#wit2">諸</rdg></app>
<app from="#beg0795005" to="#end0795005"><lem wit="#wit1">刀</lem><rdg resp="#resp1" wit="#wit4 #wit2">力</rdg></app>
<app from="#beg0795006" to="#end0795006"><lem wit="#wit1">受</lem><rdg resp="#resp1" wit="#wit7">愛</rdg></app>
<app from="#beg0795007" to="#end0795007"><lem wit="#wit1">想</lem><rdg resp="#resp1" wit="#wit7">相</rdg></app>
<app from="#beg0795008" to="#end0795008"><lem wit="#wit1">別</lem><rdg resp="#resp1" wit="#wit4 #wit2">故</rdg></app>
