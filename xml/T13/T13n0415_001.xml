<app from="#beg0831001" to="#end0831001"><lem wit="#wit1">愕</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5">悚</rdg></app>
<app from="#beg0831002" to="#end0831002"><lem wit="#wit1">覩</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5">觀</rdg></app>
