<app from="#beg0480002" to="#end0480002"><lem wit="#wit1">福</lem><rdg resp="#resp1" wit="#wit4 #wit2 #wit3 #wit5">禮</rdg></app>
<app from="#beg0480003" to="#end0480003"><lem wit="#wit1">剋</lem><rdg resp="#resp1" wit="#wit3">克</rdg></app>
<app from="#beg0480004" to="#end0480004"><lem wit="#wit1">來</lem><rdg resp="#resp1" wit="#wit5">離</rdg></app>
<app from="#beg0480005" to="#end0480005"><lem wit="#wit1">叚叚</lem><rdg resp="#resp1" wit="#wit2 #wit3">段段</rdg></app>
