<app from="#beg0481001" to="#end0481001"><lem wit="#wit1">利</lem><rdg resp="#resp1" wit="#wit2 #wit3">不</rdg></app>
<app from="#beg0481002" to="#end0481002"><lem wit="#wit1">此</lem><rdg resp="#resp1" wit="#wit3">能</rdg></app>
<app from="#beg0481003" to="#end0481003"><lem wit="#wit1">擔荷</lem><rdg resp="#resp1" wit="#wit4">檐荷</rdg><rdg resp="#resp1" wit="#wit3">儋何</rdg></app>
<app from="#beg0481004" to="#end0481004"><lem wit="#wit1">千</lem><rdg resp="#resp1" wit="#wit4 #wit2 #wit3 #wit5">年</rdg></app>
