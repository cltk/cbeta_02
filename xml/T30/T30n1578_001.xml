<app from="#beg0270002" to="#end0270002"><lem wit="#wit1">名</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5">成</rdg></app>
<app from="#beg0270004" to="#end0270004"><lem wit="#wit1">此是</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5"><space quantity="0"/></rdg></app>
<app from="#beg0270005" to="#end0270005"><lem wit="#wit1">誷</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5">罔</rdg></app>
<app from="#beg0270006" to="#end0270006"><lem wit="#wit1">有</lem><rdg resp="#resp1" wit="#wit4">言</rdg></app>
<app from="#beg0271001" to="#end0271001"><lem wit="#wit1">象</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5">象馬</rdg></app>
<app from="#beg0271002" to="#end0271002"><lem wit="#wit1">許</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5">說</rdg></app>
<app from="#beg0271003" to="#end0271003"><lem wit="#wit1">自<lb n="0271a24" ed="T"/>性皆空</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5">空無自性</rdg></app>
