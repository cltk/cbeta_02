<app from="#beg0495005" to="#end0495005"><lem wit="#wit1">舉</lem><rdg resp="#resp1" wit="#wit2">譽</rdg></app>
<app from="#beg0495006" to="#end0495006"><lem wit="#wit1">佷</lem><rdg resp="#resp1" wit="#wit2">狼</rdg></app>
<app from="#beg0495007" to="#end0495007"><lem wit="#wit1">戚</lem><rdg resp="#resp1" wit="#wit4 #wit5 #wit2 #wit6">慼</rdg></app>
