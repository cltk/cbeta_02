<app from="#beg0826003" to="#end0826003"><lem wit="#wit1">智</lem><rdg resp="#resp1" wit="#wit6">阿毘曇經智</rdg></app>
<app from="#beg0826004" to="#end0826004"><lem wit="#wit1">之四</lem><rdg resp="#resp1" wit="#wit6"><space quantity="0"/></rdg></app>
<app from="#beg0826006" to="#end0826006"><lem wit="#wit1">天</lem><rdg resp="#resp1" wit="#wit7">此</rdg></app>
