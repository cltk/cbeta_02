<lb n="0892c05" ed="T"/><cb:tt><cb:t xml:lang="sa-Sidd"><g ref="#SD-A5F1">􄗱</g></cb:t><cb:t xml:lang="zh">野</cb:t></cb:tt><cb:tt><cb:t xml:lang="sa-Sidd"><g ref="#SD-A67A">􄙺</g></cb:t><cb:t xml:lang="zh">麼</cb:t></cb:tt><cb:tt><cb:t xml:lang="sa-Sidd"><g ref="#SD-A6A9">􄚩</g></cb:t><cb:t xml:lang="zh"><cb:yin><cb:zi>賀</cb:zi><cb:sg>引</cb:sg></cb:yin></cb:t></cb:tt><cb:tt><cb:t xml:lang="sa-Sidd"><g ref="#SD-A441">􄑁</g></cb:t><cb:t xml:lang="zh"><cb:yin><cb:zi>迦</cb:zi><cb:sg>引</cb:sg></cb:yin></cb:t></cb:tt><cb:tt><cb:t xml:lang="sa-Sidd"><g ref="#SD-A642">􄙂</g></cb:t><cb:t xml:lang="zh">嚕</cb:t></cb:tt><cb:tt><cb:t xml:lang="sa-Sidd"><g ref="#SD-A54D">􄕍</g></cb:t><cb:t xml:lang="zh">抳</cb:t></cb:tt><cb:tt><cb:t xml:lang="sa-Sidd"><g ref="#SD-A441">􄑁</g></cb:t><cb:t xml:lang="zh"><cb:yin><cb:zi>迦</cb:zi><cb:sg>引</cb:sg></cb:yin></cb:t></cb:tt><cb:tt><cb:t xml:lang="sa-Sidd"><g ref="#SD-A5F1">􄗱</g></cb:t><cb:t xml:lang="zh">野</cb:t></cb:tt><cb:tt><cb:t xml:lang="sa-Sidd"><g ref="#SD-A557">􄕗</g></cb:t><cb:t xml:lang="zh">怛</cb:t></cb:tt>
