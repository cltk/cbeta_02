<app from="#beg0722002" to="#end0722002"><lem wit="#wit1">稱</lem><rdg resp="#resp1" wit="#wit4 #wit5 #wit3 #wit6">秤</rdg></app>
<app from="#beg0722003" to="#end0722003"><lem wit="#wit1">終</lem><rdg resp="#resp1" wit="#wit5 #wit3">緣</rdg></app>
<app from="#beg0722004" to="#end0722004"><lem wit="#wit1">如</lem><rdg resp="#resp1" wit="#wit4 #wit5 #wit3 #wit6">如是</rdg></app>
<app from="#beg0722005" to="#end0722005"><lem wit="#wit1">耽</lem><rdg resp="#resp1" wit="#wit5 #wit3">貪</rdg></app>
<app from="#beg0722006" to="#end0722006"><lem wit="#wit1">放</lem><rdg resp="#resp1" wit="#wit5">於</rdg></app>
<app from="#beg0723001" to="#end0723001"><lem wit="#wit1">見</lem><rdg resp="#resp1" wit="#wit5">者</rdg></app>
<app from="#beg0723002" to="#end0723002"><lem wit="#wit1">瀑</lem><rdg resp="#resp1" wit="#wit4 #wit5 #wit3 #wit6">暴</rdg></app>
