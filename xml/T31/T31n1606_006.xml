<app from="#beg0721003" to="#end0721003"><lem wit="#wit1">芽</lem><rdg resp="#resp1" wit="#wit4 #wit5 #wit3 #wit6">牙</rdg></app>
<app from="#beg0721004" to="#end0721004"><lem wit="#wit1">性</lem><rdg resp="#resp1" wit="#wit4 #wit5 #wit3 #wit6">在</rdg></app>
<app from="#beg0722001" to="#end0722001"><lem wit="#wit1">夭</lem><rdg resp="#resp1" wit="#wit6">殀</rdg></app>
