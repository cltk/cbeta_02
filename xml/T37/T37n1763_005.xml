<app from="#beg0398001" to="#end0398001"><lem wit="#wit1">之</lem><rdg resp="#resp1" wit="#wit3">之論</rdg></app>
<app from="#beg0398002" to="#end0398002"><lem wit="#wit1">雖</lem><rdg resp="#resp1" wit="#wit3">雖滅而知常雖</rdg></app>
<app from="#beg0398003" to="#end0398003"><lem wit="#wit1">所應</lem><rdg resp="#resp1" wit="#wit3"><space quantity="0"/></rdg></app>
<app from="#beg0398004" to="#end0398004"><lem wit="#wit1">苦</lem><rdg resp="#resp1" wit="#wit3">共</rdg></app>
