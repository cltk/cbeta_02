<app from="#beg0481002" to="#end0481002"><lem wit="#wit1">全</lem><rdg resp="#resp1" wit="#wit3">令</rdg></app>
<app from="#beg0481003" to="#end0481003"><lem wit="#wit1">取</lem><rdg resp="#resp1" wit="#wit3">收</rdg></app>
<app from="#beg0481004" to="#end0481004"><lem wit="#wit1">者</lem><rdg resp="#resp1" wit="#wit3">著</rdg></app>
<app from="#beg0481005" to="#end0481005"><lem wit="#wit1">皆</lem><rdg resp="#resp1" wit="#wit3">皆是</rdg></app>
<app from="#beg0481006" to="#end0481006"><lem wit="#wit1">辨</lem><rdg resp="#resp1" wit="#wit3">辯</rdg></app>
<app from="#beg0481007" to="#end0481007"><lem wit="#wit1">背</lem><rdg resp="#resp1" wit="#wit3">肯</rdg></app>
