<app from="#beg0480008" to="#end0480008"><lem wit="#wit1">譬</lem><rdg resp="#resp1" wit="#wit3">譬天</rdg></app>
<app from="#beg0480009" to="#end0480009"><lem wit="#wit1">實</lem><rdg resp="#resp1" wit="#wit3">實譬</rdg></app>
<app from="#beg0480010" to="#end0480010"><lem wit="#wit1">凡</lem><rdg resp="#resp1" wit="#wit3">譬凡</rdg></app>
