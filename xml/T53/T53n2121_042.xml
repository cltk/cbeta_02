<app from="#beg0219021" to="#end0219021"><lem wit="#wit1">飴</lem><rdg resp="#resp1" wit="#wit3 #wit4 #wit2 #wit5">飼</rdg></app>
<app from="#beg_2e9" to="#end_2e9" corresp="#0219020"><lem wit="#wit1">斗</lem><rdg resp="#resp1" wit="#wit5">升</rdg></app>
