<app from="#beg0219024" to="#end0219024"><lem wit="#wit1">我是</lem><rdg resp="#resp1" wit="#wit3 #wit4 #wit2 #wit5">是我</rdg></app>
<app from="#beg0219025" to="#end0219025"><lem wit="#wit1">分</lem><rdg resp="#resp1" wit="#wit3 #wit4 #wit2 #wit5">三分</rdg></app>
