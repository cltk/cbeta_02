<app from="#beg0837024" to="#end0837024"><lem wit="#wit1">過</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit5">愚</rdg></app>
<app from="#beg0837025" to="#end0837025"><lem wit="#wit1">隨</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5">心</rdg></app>
<app from="#beg0837026" to="#end0837026"><lem wit="#wit1">剛</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit5"><space quantity="0"/></rdg></app>
<app from="#beg0837027" to="#end0837027"><lem wit="#wit1">大</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5">天</rdg></app>
<app from="#beg0838001" to="#end0838001"><lem wit="#wit1">知</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5"><space quantity="0"/></rdg></app>
<app from="#beg0838002" to="#end0838002"><lem wit="#wit1">如</lem><rdg resp="#resp1" wit="#wit3 #wit4">而</rdg></app>
<app from="#beg0838003" to="#end0838003"><lem wit="#wit1">莊</lem><rdg resp="#resp1" wit="#wit3 #wit4">裝</rdg></app>
<app from="#beg0838004" to="#end0838004"><lem wit="#wit1">臺</lem><rdg resp="#resp1" wit="#wit3 #wit4 #wit5"><space quantity="0"/></rdg></app>
<app from="#beg0838005" to="#end0838005"><lem wit="#wit1">唯</lem><rdg resp="#resp1" wit="#wit3 #wit4">惟</rdg></app>
<app from="#beg0838006" to="#end0838006"><lem wit="#wit1">等</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4">如</rdg></app>
