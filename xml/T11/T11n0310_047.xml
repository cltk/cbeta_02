<app from="#beg0275002" to="#end0275002"><lem wit="#wit1">慞</lem><rdg resp="#resp1" wit="#wit10">章</rdg></app>
<app from="#beg0275003" to="#end0275003"><lem wit="#wit1">瑣</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5">鎖</rdg></app>
