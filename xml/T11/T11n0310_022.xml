<p>
<app from="#beg0120003" to="#end0120003"><lem wit="#wit1">爾</lem><rdg resp="#resp1" wit="#wit4">是</rdg></app>
<app from="#beg0121001" to="#end0121001"><lem wit="#wit1">語</lem><rdg resp="#resp1" wit="#wit4">業</rdg></app>
<app from="#beg0121002" to="#end0121002"><lem wit="#wit1">病疾</lem><rdg resp="#resp1" wit="#wit3 #wit4">疾病</rdg></app>
<app from="#beg_95" to="#end_95"><lem wit="#wit6 #wit7" resp="#resp3">說<note type="cf1">K06n0022_p0172b06</note></lem><rdg wit="#wit1">設</rdg></app>
<app from="#beg0122001" to="#end0122001"><lem wit="#wit1">道</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5">者</rdg></app>
<app from="#beg0123001" to="#end0123001"><lem wit="#wit1">義</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5">議</rdg></app>
<app from="#beg0123002" to="#end0123002"><lem wit="#wit1">以</lem><rdg resp="#resp1" wit="#wit3 #wit4">於</rdg></app>
