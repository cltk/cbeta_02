<app from="#beg0828003" to="#end0828003"><lem wit="#wit1">梨</lem><rdg resp="#resp1" wit="#wit2">黎</rdg></app>
<app from="#beg0828004" to="#end0828004"><lem wit="#wit1">薩</lem><rdg resp="#resp1" wit="#wit2">提</rdg></app>
