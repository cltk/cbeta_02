<app from="#beg0135008" to="#end0135008"><lem wit="#wit1">道</lem><rdg resp="#resp1" wit="#wit2">導</rdg></app>
<app from="#beg0136001" to="#end0136001"><lem wit="#wit1">王</lem><rdg resp="#resp1" wit="#wit2">主</rdg></app>
<app cb:word-count="14" from="#beg0136002" to="#end0136002"><lem wit="#wit1"><l>令諸眾生獲吉祥</l><l>咸皆安住於聖道</l></lem><rdg resp="#resp1" wit="#wit2"><space quantity="0"/></rdg></app>
<app from="#beg0136003" to="#end0136003"><lem wit="#wit1">勝</lem><rdg resp="#resp1" wit="#wit2">勝者</rdg></app>
<app from="#beg0136004" to="#end0136004"><lem wit="#wit1">盡</lem><rdg resp="#resp1" wit="#wit2">畫</rdg></app>
