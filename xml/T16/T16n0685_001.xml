<app from="#beg0779006" to="#end0779006"><lem wit="#wit1">月氏三藏</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5">三藏法師</rdg></app>
<app from="#beg0779007" to="#end0779007"><lem wit="#wit1">乾</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4 #wit5">犍</rdg></app>
<app from="#beg0779008" to="#end0779008"><lem wit="#wit1">立</lem><rdg resp="#resp1" wit="#wit5">柱</rdg></app>
<app from="#beg0779009" to="#end0779009"><lem wit="#wit1">即</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4">即以</rdg></app>
<app from="#beg0779010" to="#end0779010"><lem wit="#wit1">飯</lem><rdg resp="#resp1" wit="#wit2 #wit3 #wit4">鉢</rdg></app>
