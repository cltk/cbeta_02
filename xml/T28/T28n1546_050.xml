<app from="#beg0375004" to="#end0375004"><lem wit="#wit1">常</lem><rdg resp="#resp1" wit="#wit5">當</rdg></app>
<app from="#beg_1f0" to="#end_1f0"><lem resp="#resp3" wit="#wit6 #wit8">萬<note type="cf1">K25n0951_p0936b06</note></lem><rdg wit="#wit1">滿</rdg></app>
<app from="#beg0376001" to="#end0376001"><lem wit="#wit1">駁</lem><rdg resp="#resp1" wit="#wit3">駮</rdg></app>
<app from="#beg0376002" to="#end0376002"><lem wit="#wit1">斑</lem><rdg resp="#resp1" wit="#wit4 #wit5 #wit3">班</rdg></app>
<app from="#beg_1f1" to="#end_1f1" corresp="#0376001"><lem wit="#wit1">駁</lem><rdg resp="#resp1" wit="#wit3">駮</rdg></app>
<app from="#beg0376003" to="#end0376003"><lem wit="#wit1">智</lem><rdg resp="#resp1" wit="#wit4 #wit5 #wit2 #wit3">知</rdg></app>
<app from="#beg_1f2" to="#end_1f2" corresp="#0376003"><lem wit="#wit1">智</lem><rdg resp="#resp1" wit="#wit4 #wit5 #wit2 #wit3">知</rdg></app>
<app from="#beg0376004" to="#end0376004"><lem wit="#wit1">他</lem><rdg resp="#resp1" wit="#wit2">其</rdg></app>
<app from="#beg0376005" to="#end0376005"><lem wit="#wit1">餘</lem><rdg resp="#resp1" wit="#wit4 #wit5 #wit2 #wit3">餓</rdg></app>
