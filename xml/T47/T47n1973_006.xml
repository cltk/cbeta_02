<p>
<app from="#beg0330005" to="#end0330005"><lem wit="#wit1">被</lem><rdg resp="#resp1" wit="#wit2">彼</rdg></app>
<app from="#beg0331001" to="#end0331001"><lem wit="#wit1">少</lem><rdg resp="#resp1" wit="#wit2">小</rdg></app>
<app from="#beg0331002" to="#end0331002"><lem wit="#wit1">工</lem><rdg resp="#resp1" wit="#wit2">土</rdg></app>
