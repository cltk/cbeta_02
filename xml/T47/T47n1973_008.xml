<app from="#beg0339001" to="#end0339001"><lem wit="#wit1">聖</lem><rdg resp="#resp1" wit="#wit2">神</rdg></app>
<app from="#beg0339002" to="#end0339002"><lem wit="#wit1">被</lem><rdg resp="#resp1" wit="#wit2">因</rdg></app>
<app from="#beg0339003" to="#end0339003"><lem wit="#wit1">崇</lem><rdg resp="#resp1" wit="#wit2">祟</rdg></app>
